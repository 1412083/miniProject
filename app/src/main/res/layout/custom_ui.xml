<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:padding="0dp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:id="@+id/lisImg"
            android:src="@drawable/bt1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_weight="7">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listName"
                android:gravity="left"
                android:textColor="#058176"
                android:paddingLeft="5dp"
                android:layout_marginBottom="6px"
                android:textSize="22dp">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listAdd"
                android:text="textview"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:layout_marginBottom="6px"
                android:textColor="#231f1f">
            </TextView>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:paddingLeft="5dp"
                android:rating="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listDesc"
                android:gravity="left"
                android:layout_marginBottom="6px"
                android:textSize="12dp"
                android:paddingLeft="5dp"
                android:textColor="#5e5a5a">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:id="@+id/img_icon_direction"
                android:src="@drawable/directions"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listUser"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="#aba4a4"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>